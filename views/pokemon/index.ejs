<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PokeDB!!</title>
</head>

<body>
    <h1>Pokemon</h1>
    <% if(error) { %>
        <h2><%= error %></h2>
        <% } %>
            <ul>
                <% pokemon.forEach(function(pokemon) { %>
                    <li>
                        <%= pokemon.text %>
                            -
                            <%= pokemon.legendary ? 'LEGENDARY' : 'not legendary' %>
                    </li>
                    <% }) %>
            </ul>
</body>

</html>